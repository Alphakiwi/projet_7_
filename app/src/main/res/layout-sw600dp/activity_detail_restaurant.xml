<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#f35336"
    android:layout_height="match_parent"

    tools:context=".DetailRestaurantActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">




        <ImageView
            android:id="@+id/imageAvatar"
            android:layout_width="fill_parent"
            android:layout_height="280dp"
            android:layout_marginTop="85dp"
            android:textStyle="bold"
            android:text=""/>




        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="280dp"
            android:layout_marginLeft="20dp"

            android:fontFamily="monospace"
            android:gravity="left"
            android:text=""
            android:textColor="#FFF"
            android:textSize="35dp" />


    </RelativeLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="Back"
            android:drawableTop="@drawable/ic_baseline_arrow_back_24px"/>

        
        <Button
            android:id="@+id/call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="Call"
            android:drawableTop="@drawable/ic_baseline_call_24px"/>

        <Button
            android:id="@+id/like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="Like"
            android:drawableTop="@drawable/ic_baseline_star_border_24px"/>

        <Button
            android:id="@+id/website"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="Website"
            android:drawableTop="@drawable/ic_baseline_public_24px"/>
        
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="500dp"
        android:layout_marginTop="330dp"
        android:src="@drawable/ic_baseline_done_outline_24px"
        android:clickable="true"
        app:elevation="4dp"
        app:layout_anchor="@+id/fab"
        app:layout_anchorGravity="right|center" />

    <TextView
        android:id="@+id/lieuTel"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="410dp"
        android:background="@drawable/border"

        android:gravity="left"
        android:padding="5dp"
        android:text=""
        android:textColor="#000"
        android:textSize="20dp" />


    <TextView
        android:id="@+id/loca"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="450dp"

        android:gravity="left"
        android:paddingLeft="35dp"
        android:text=""
        android:textColor="#444"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/tel"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="480dp"

        android:paddingLeft="35dp"
        android:gravity="left"
        android:text=""
        android:textColor="#444"
        android:textSize="15dp" />


    <TextView
        android:id="@+id/web"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="510dp"

        android:paddingLeft="35dp"
        android:gravity="left"
        android:text=""
        android:textColor="#444"
        android:textSize="15dp" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listCoworkers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:layout_marginTop="550dp">

    </androidx.recyclerview.widget.RecyclerView>

    <ImageView
        android:id="@+id/locaRose"
        android:layout_width="58dp"
        android:layout_height="57dp"

        android:layout_marginTop="430dp"
        android:src="@drawable/locarose" />

    <ImageView
        android:id="@+id/telRose"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="483dp"
        android:src="@drawable/telrose" />

    <ImageView
        android:id="@+id/wwwRose"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="515dp"
        android:src="@drawable/wwwrose" />






</androidx.coordinatorlayout.widget.CoordinatorLayout>